<Window x:Class="RealTimeStockPriceViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Real Time Stock Prices" Height="440.395" Width="675"
        xmlns:stockPrice="clr-namespace:ViewModels;assembly=ViewModels">
    <Window.DataContext>
        <stockPrice:StockPriceViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Stock Symbols</Label>
                <TextBox Width="300" Height="25" Text ="{Binding CsvStockSymbols, Mode=TwoWay}"></TextBox>
                <Button Width="120" Height="25" Command="{Binding GetPricesCommand}">Get Latest Prices</Button>
                <Button Width="100" Height="25">Historic</Button>
            </StackPanel>
            <DataGrid Height="379" ItemsSource ="{Binding StockPrices}">

            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
