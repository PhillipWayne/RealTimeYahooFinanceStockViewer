<Window x:Class="RealTimeStockPriceViewer.HistoricStockPriceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:RealTimeStockPriceViewer.ViewModels"
        Title ="Historic Stock Prices">
    <Window.DataContext>
        <viewModels:HistoricStockPriceViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Margin="5,5,5,5" Content="Start Date"></Label>
                <DatePicker Width ="150"  Margin="5,5,5,5"></DatePicker>

                <Label FontWeight="Bold" Margin="5,5,5,5" Content="End Date"></Label>
                <DatePicker Width ="150" Margin="5,5,5,5"></DatePicker>

                <Button FontWeight="Bold" Width ="150" Margin="5,5,5,5" Content="Get Historic Prices"></Button>
            </StackPanel>
            <StackPanel>
                <DockPanel>
                    <DataGrid IsReadOnly="True" ItemsSource ="{Binding HistoricStockPrices}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding PriceAtDate}" Header="Date"/>
                            <DataGridTextColumn Binding="{Binding Symbol}" Header="Stock Symbol"/>
                            <DataGridTextColumn Binding="{Binding LastTradedPrice}" Header="Last Traded Price"/>
                            <DataGridTextColumn Binding="{Binding OpenPrice}" Header="Open Price"/>
                            <DataGridTextColumn Binding="{Binding TradedVolume}" Header="Traded Volume"/>
                            <DataGridTextColumn Binding="{Binding Bid}" Header="Bid Price"/>
                            <DataGridTextColumn Binding="{Binding Ask}" Header="Ask Price"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
