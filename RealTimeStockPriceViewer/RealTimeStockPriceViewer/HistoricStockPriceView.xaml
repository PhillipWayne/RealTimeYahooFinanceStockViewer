<Window x:Class="RealTimeStockPriceViewer.HistoricStockPriceView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:RealTimeStockPriceViewer.ViewModels"
        Title ="Historic Stock Prices">
    <Window.DataContext>
        <viewModels:StockPriceViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Margin="5,5,5,5" Content="Start Date"></Label>
                <DatePicker Width ="150"  Margin="5,5,5,5"></DatePicker>

                <Label FontWeight="Bold" Margin="5,5,5,5" Content="End Date"></Label>
                <DatePicker Width ="150" Margin="5,5,5,5"></DatePicker>

                <Button FontWeight="Bold" Width ="150" Margin="5,5,5,5" Content="Get Historic Prices"></Button>
            </StackPanel>
            <StackPanel></StackPanel>
        </StackPanel>
    </Grid>
</Window>
